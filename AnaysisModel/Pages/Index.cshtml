@page
@model AnaysisModel.Pages.IndexModel
@{
    ViewData["Title"] = "Strategy Analysis";
}

<h1>Strategy Analysis</h1>

<form method="post">
    <div>
        <label for="Cost">Cost(TWD):</label>
        <input type="number" id="Cost" name="Cost" step="0.01" required />
    </div>
    <div>
        <label for="Headcount">Headcount:</label>
        <input type="number" id="Headcount" name="Headcount" required />
    </div>
    <div>
        <label for="ROI">ROI(%):</label>
        <input type="number" id="ROI" step="0.01" required />
    </div>
    <div>
        <label for="additional_requirement">additional requirement:</label>
        <input type="text" id="additional_requirement" name="additional_requirement" />
    </div>
    <button type="submit">Analyze</button>
</form>
<form method="get" action="">
    <div>
        <label for="current_strategy">Current Strategy:</label>
        <select id="current_strategy" name="current_strategy">
            <option value="strategy1">IncreaseMarketingBudget</option>
            <option value="strategy2">OptimizeOperations</option>
            <option value="strategy3">With Additional Requirement</option>
        </select>
    </div>
    <button type="submit">Select</button>
</form>
@if (Model.Report != null)
{
    <h2>Analysis Result</h2>
    <pre>@Model.Report.GenerateSummary()</pre>
}
